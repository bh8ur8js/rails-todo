<div class="px-[30%] py-28 flex flex-col flex-grow text-sm space-y-4 w-full">
  <div>
    <h1 class="mr-auto font-bold text-2xl my-1 dark:text-white pb-1">
      Account log in.
    </h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
      <div class="flex flex-col">
        <%= form.email_field :email, autocomplete: "email", autofocus: true, placeholder: "Email", class: "even:bg-gray-200 dark:even:bg-gray-700 px-2.5 py-0.5 first:rounded-t-[6px] last:rounded-b-[6px] bg-gray-100 border border-t-0 first:!border-t !border-gray-200 h-fit w-full focus:outline-0 focus:ring-0 text-sm dark:bg-gray-800 dark:!border-gray-700 dark:text-white" %>
        <%= form.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "even:bg-gray-200 dark:even:bg-gray-700 px-2.5 py-0.5 first:rounded-t-[6px] last:rounded-b-[6px] bg-gray-100 border border-t-0 !border-gray-200 h-fit w-full focus:outline-0 focus:ring-0 text-sm dark:bg-gray-800 dark:!border-gray-700 dark:text-white" %>
      </div>

      <div class="flex flex-row mt-2">
        <div class="mr-auto flex flex-row space-x-2">
          <div class="flex flex-col justify-center">
            <%= form.check_box :remember_me, class: "rounded-[6px] duration-100 bg-gray-100 border-gray-200 dark:bg-gray-800 dark:border-gray-700 cursor-pointer " %>
          </div>

          <div class="flex flex-col justify-center">
            <%= form.label "Stay logged in", class: "dark:text-white" %>
          </div>
        </div>
      </div>

      <div class="flex flex-row mt-3">
        <%= link_to "Don't have an account? Sign up!", new_user_registration_path, class: "truncate mr-auto text-sm my-1 dark:text-white h-full flex flex-col hover:text-blue-700 active:text-blue-800 dark:hover:text-blue-500 dark:active:text-blue-600 cursor-pointer duration-100" %>
      </div>

      <div class="flex flex-row -mt-0.5" data-controller="webauthn">
        <%= link_to "Configured WebAuthn? Try passwordless login!", webauthn_session_path, class: "truncate mr-auto text-sm my-1 dark:text-white h-full flex flex-col hover:text-blue-700 active:text-blue-800 dark:hover:text-blue-500 dark:active:text-blue-600 cursor-pointer duration-100" %>
        <%= form.submit "Log in", class: "ml-auto cursor-pointer text-sm font-normal h-fit w-fit border border-blue-700 box-border select-none rounded-[6px] bg-blue-600 px-2.5 py-0.5 text-white duration-100 hover:bg-blue-700 hover:border-blue-800 active:bg-blue-800 shadow-inner" %>
      </div>
    <% end %>
  </div>
</div>


