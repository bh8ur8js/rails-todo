<div class="px-[30%] py-28 flex flex-col flex-grow text-sm space-y-4 w-full">
  <div>
    <h1 class="mr-auto font-bold text-2xl my-1 dark:text-white">
      Account sign up.
    </h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
      <div class="flex flex-col">
        <%= form.text_field :name, autofocus: true, placeholder: "Name", class: "px-2.5 py-0.5 first:rounded-t-[6px] last:rounded-b-[6px] bg-gray-100 border border-t-0 first:!border-t !border-gray-200 h-fit w-full focus:outline-0 focus:ring-0 text-sm dark:bg-gray-800 dark:!border-gray-700 dark:text-white" %>
        <%= form.email_field :email, autocomplete: "email", placeholder: "Email", class: "px-2.5 py-0.5 first:rounded-t-[6px] last:rounded-b-[6px] bg-gray-100 border border-t-0 first:!border-t !border-gray-200 h-fit w-full focus:outline-0 focus:ring-0 text-sm dark:bg-gray-800 dark:!border-gray-700 dark:text-white" %>
        <%= form.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "px-2.5 py-0.5 first:rounded-t-[6px] last:rounded-b-[6px] bg-gray-100 border border-t-0 !border-gray-200 h-fit w-full focus:outline-0 focus:ring-0 text-sm dark:bg-gray-800 dark:!border-gray-700 dark:text-white" %>
        <%= form.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "px-2.5 py-0.5 first:rounded-t-[6px] last:rounded-b-[6px] bg-gray-100 border border-t-0 !border-gray-200 h-fit w-full focus:outline-0 focus:ring-0 text-sm dark:bg-gray-800 dark:!border-gray-700 dark:text-white" %>
      </div>

      <div class="flex flex-row mt-3">
        <%= link_to "Have an account? Log in!", new_user_session_path, class: "mr-auto text-sm my-1 dark:text-white h-full flex flex-col hover:text-blue-700 active:text-blue-800 dark:hover:text-blue-500 dark:active:text-blue-600 cursor-pointer duration-100" %>
        <%= form.submit "Sign up", class: "ml-auto cursor-pointer text-sm font-normal h-fit w-fit border border-blue-700 box-border select-none rounded-[6px] bg-blue-600 px-2.5 py-0.5 text-white duration-100 hover:bg-blue-700 hover:border-blue-800 active:bg-blue-800 shadow-inner" %>
      </div>
    <% end %>
  </div>
</div>


